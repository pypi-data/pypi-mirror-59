<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.mailchimp"
    purge="False">

    <configlet
        title="MailChimp"
        action_id="mailchimp"
        appId="collective.mailchimp"
        category="Products"
        condition_expr=""
        icon_expr="string:${portal_url}/++resource++collective.mailchimp.images/mailchimp.gif"
        url_expr="string:${portal_url}/@@mailchimp-settings"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>