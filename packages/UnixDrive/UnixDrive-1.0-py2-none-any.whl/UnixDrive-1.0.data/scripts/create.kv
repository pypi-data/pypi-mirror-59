<VerifyConnection>:
    name: "verify"

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Validate connection:"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.35,"y":0.45}
            size_hint: 0.3, 0.1
            text: "Connect to server"
            font_size: (root.width**2 + root.height**2) / 14**4
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "left"
                root.CheckConnection()





<CreateAccountWindow>:
    name: "create"

    username: username
    password: password

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Username: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: username
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4



            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    username: username
    password: password

    FloatLayout:

        Label:
            text:"Username: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: username
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:

    FloatLayout:

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            background_color: (1, 0, 1, 1)
            on_release:
                app.root.current = "verify"
                root.manager.transition.direction = "down"





<WorkWindow>:
    name: "work"

    FloatLayout:
        size: root.width, root.height/2

        Label:
            text: "My Drive Account:"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1}
            font_size: (root.width**2 + root.height**2) / 14**4




        Button:
            pos_hint:{"x":0.35,"y":0.2}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Download file"
            background_color: (1, 0, 1, 1)
            on_release:
                root.manager.transition.direction = "up"
                root.show_download()

        Button:
            pos_hint:{"x":0.35,"y":0.4}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Remove file"
            background_color: (1, 0, 1, 1)
            on_release: root.show_remove()


        Button:
            pos_hint:{"x":0.35,"y":0.6}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Upload Files"
            background_color: (1, 0, 1, 1)
            on_release: root.show_load()







<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Go back"
                on_release: root.cancel()

            Button:
                text: "Upload"
                on_release:
                    root.load(filechooser.path, filechooser.selection)



