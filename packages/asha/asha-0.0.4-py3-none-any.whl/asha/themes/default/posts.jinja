{% extends "main.jinja" %}
{% block extra_head %}
  <title>{{title}}</title>
{% endblock %}
{% block content %}
<main class="container">
  <div class="row">
  {% for post in g.posts %}
    <div class="col-md-10 mb-5">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="{{post.thumbnail}}" />
        </div>
        <div class="col-md-8">
          <h3>{{post.title}}</h3>
          <p>{{post.description}}</p>
          <a href="{{post.url}}">Read more ... </a>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</main>
{% endblock %}
